{
  "name": "vue-wcharts",
  "version": "0.0.1",
  "private": true,
  "author": "WAAVI",
  "license": "MIT",
  "repository": "waavi/vue-wcharts",
  "scripts": {
    "serve": "vue-cli-service serve --open ./demo/main.js",
    "build": "vue-cli-service build --target lib --name vue-wcharts src/index.js",
    "build:sb": "vue-cli-service storybook:build -c src/config/storybook",
    "serve:sb": "vue-cli-service storybook:serve -p 6006 -c src/config/storybook",
    "test": "vue-cli-service test:unit",
    "lint": "vue-cli-service lint",
    "stylelint": "node_modules/stylelint/bin/stylelint.js ./src --formatter verbose",
    "validate": "yarn test && yarn lint && yarn stylelint"
  },
  "main": "dist/WCharts.umd.js",
  "browser": "dist/WCharts.common.js",
  "unpkg": "dist/WCharts.umd.min.js",
  "jsDelivr": "dist/WCharts.umd.min.js",
  "files": [
    "dist",
    "src"
  ],
  "dependencies": {
    "vue-types": "^1.5.0"
  },
  "peerDependencies": {
    "vue": "^2.5.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^5.0.0",
    "@storybook/addon-backgrounds": "^5.0.1",
    "@storybook/addon-console": "^1.1.0",
    "@storybook/addon-knobs": "^5.0",
    "@storybook/addon-links": "^5.0.0",
    "@storybook/addon-notes": "^5.0.0",
    "@storybook/addon-options": "^5.0.1",
    "@storybook/addon-storysource": "^5.0.1",
    "@storybook/addon-viewport": "^5.0",
    "@vue/cli-plugin-babel": "^3.5.0",
    "@vue/cli-plugin-eslint": "^3.5.0",
    "@vue/cli-plugin-unit-jest": "^3.5.0",
    "@vue/cli-service": "^3.5.0",
    "@vue/eslint-config-airbnb": "^4.0.0",
    "@vue/eslint-config-standard": "^4.0.0",
    "@vue/test-utils": "1.0.0-beta.29",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "eslint": "^5.8.0",
    "eslint-plugin-vue": "^5.0.0",
    "eslint-plugin-vue-types": "^1.0.0",
    "lint-staged": "^8.1.4",
    "node-sass": "^4.9.0",
    "sass-loader": "^7.1.0",
    "storybook-addon-vue-info": "^1.0.1",
    "stylelint": "^9.10.1",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-scss": "^3.5.4",
    "stylelint-webpack-plugin": "^0.10.5",
    "vue-cli-plugin-storybook": "^0.6.1",
    "vue-template-compiler": "^2.5.21",
    "vue": "^2.6.6"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "yarn validate",
      "git add"
    ]
  }
}
